<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="UserRegister_Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_45</item>
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="UserRegister_Linear_Iv">
        <item name="android:layout_width">@dimen/dp_45</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="UserRegister_Linear_Et">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorHint">#cccccc</item>
    </style>

    <style name="UserRegister_HLine" parent="@style/ViewHLine">
        <item name="android:layout_marginLeft">@dimen/dp_12</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
    </style>

</resources>
